{
  "ptable": {
    "p_id": {
      "title": "Participant id.",
      "ctrl": "text-input",
      "ctrl-opts": "value=\"\"",
      "regex": "^[vV].*",
      "regex-": "^[vV][0-9]{3}\\-[0-9]{4}\\-[sS]1$",
      "required": true,
      "filters": "uppercase"
    },
    "p_name": {
      "title": "Name",
      "ctrl": "text-input",
      "required": true
    },
    "p_dob": {
      "title": "Date of birth",
      "ctrl": "text-input",
      "ctrl-opts": "type=\"date\"",
      "required": true
    },
    "p_gender": {
      "title": "Gender",
      "ctrl": "radio-select",
      "ctrl-opts": "name=\"p_gender\" choices=\"Male,Female\"",
      "required": true
    },
    "p_enroll_date": {
      "title": "Date of enrollment",
      "ctrl": "text-input",
      "ctrl-opts": "type=\"date\"",
      "required": true
    },
    "__collections": {
      "consults": {
        "date": {
          "title": "Date of consultation",
          "value": "date()",
          "ctrl" : "label"
        },
        "time": {
          "title": "Time",
          "value": "time()",
          "ctrl" : "label"
        },
        "pc": {
          "title": "Presenting complaints",
          "required": true,
          "ctrl": "textarea",
          "ctrl-opts": "textpred=\"pc\" rows=3"
        },
        "hpi": {
          "title": "History of presenting illness",
          "required": true,
          "ctrl": "textarea",
          "ctrl-opts": "textpred=\"hpi\" rows=5"
        },
        "imp": {
          "title": "Impression",
          "required": true,
          "ctrl": "textarea",
          "ctrl-opts": "textpred=\"imp\" rows=2"
        },
        "plan": {
          "title": "History of presenting illness",
          "required": true,
          "ctrl": "textarea",
          "ctrl-opts": "textpred=\"plan\" rows=2"
        },
        "meds": {
          "title": "Medications",
          "required": true,
          "ctrl": "textarea",
          "ctrl-opts": " textpred=\"meds\" rows=2"
        }
      }
    }
  }
}
